<style>


h1 {
  font-family: jukeboxfont;
  color: rgb(56, 65, 14);
    -webkit-text-stroke-width: 1px;
    -webkit-text-stroke-color: rgb(211,153,0,0.65);
    font-size: 4em;
    
}

.select{
  color: white;
  font-family: typewriter;
  font-size: 1.2em;
   -webkit-text-stroke-width: 0.5px;
    -webkit-text-stroke-color: black;
}

.carousel-inner {
width:500px;
height:500px;
 box-shadow:0 0 5px 5px rgb(211,153,0,0.65)
 
}

.albumcontainer {
  display:flex;
  justify-content: center;
  align-items: center;
  flex-direction:column;
  flex-wrap:wrap;
  height: 100vh;
  width: 100vw;
  background-image: url("/images/mainback.jpg");
  background-size: cover;
  border: 8px groove rgb(211,153,0,0.65);
  box-sizing:border-box;
  overflow:hidden;
  box-sizing: border-box;
}



.carousel{
  
}




</style>
 
<body>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

<div class = "albumcontainer">
<h1>JUKEBOX BOOGALOO</h1>
<p class = "select">Album Select</p>
  <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="false"  data-bs-touch="true">
    <div class="carousel-inner">
      <% @albums.each_with_index do |album, i| %>
        <div class="carousel-item <%= "active" if i == 0 %>">
          <%= link_to "/album/#{i+1}" do %> <img src="<%= album.albumArt%>" class="d-block w-100"> <%end%>
            
        </div>
        <%end%>
        <div class = "buttons">
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
    </div>
  
</div>

</body>